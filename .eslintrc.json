{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "max-len": 1,
    "newline-per-chained-call": 0,
    "no-console": [1, { "allow": ["info", "warn", "error"] }],
    "no-underscore-dangle": 0,
    "space-before-function-paren": [1, "always"]
  },
  "plugins": [
    "react"
  ]
}
